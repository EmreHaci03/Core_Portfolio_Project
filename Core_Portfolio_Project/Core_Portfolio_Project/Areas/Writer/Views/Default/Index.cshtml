@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    int count = 0;
}
@{
    string color = "";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>İçerik</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            @if (@item.Status == "Aktif" || item.Status == "Tamamlandı")
                            {
                                color = "badge badge-success";
                            }
                            @if (item.Status == "Planlandı" || item.Status == "Yapılıyor")
                            {
                                color = "badge badge-warning";
                            }
                            @if (item.Status == "Yapıldı" || item.Status == "Bitirildi")
                            {
                                color = "badge badge-danger";
                            }
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Title</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td>@item.Content</td>
                                <td><a href="/Writer/Default/AnnouncemenetDetails/@item.AnnouncementID" class="btn btn-outline-primary">Detaylar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

