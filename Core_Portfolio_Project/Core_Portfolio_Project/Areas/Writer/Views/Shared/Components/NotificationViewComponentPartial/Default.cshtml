@using EntityLayer.Concrete
@model List<Announcement>
@{
    Layout = null;
    string color = "";
    int count = 0;
}

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <p class="mb-0 font-weight-normal float-left dropdown-header">Bildirimler</p>

    @foreach (var item in Model)
    {
        count++;
        if (count==1)
        {
            color = "bg-success";
        }
        else if(count==2)
        {
            color = "bg-primary";
        }
         else if(count==3)
        {
            color = "bg-warning";
        }
         else if(count==4)
        {
            color = "bg-light";
        }
        else
        {
            color = "bg-danger";
        }
        <a class="dropdown-item preview-item" href="/Writer/Default/AnnouncemenetDetails/@item.AnnouncementID/">
            <div class="preview-thumbnail">
                <div class="preview-icon @color">
                    <i class="ti-info-alt mx-0"></i>
                </div>
            </div>
            <div class="preview-item-content">
                <h6 class="preview-subject font-weight-normal">@item.Title</h6>
                <p class="font-weight-light small-text mb-0 text-muted">
                    @item.Date.ToString("dd MMMM yyyy") <!-- tarih formatlayabilirsin -->
                </p>
            </div>
        </a>
    }
</div>
