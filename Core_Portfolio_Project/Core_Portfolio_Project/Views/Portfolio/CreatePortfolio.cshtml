@using EntityLayer.Concrete
@model Portfolio
@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



@using (Html.BeginForm("CreatePortfolio", "Portfolio", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Portfolio Ekleme Paneli </p>
                
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" name="Name">
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Url 1</label>
                        <input type="text" class="form-control" name="ImageUrl">
                        @Html.ValidationMessageFor(x => x.ImageUrl, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Url 2 </label>
                        <input type="text" class="form-control" name="ImageUrl2">
                        @Html.ValidationMessageFor(x => x.ImageUrl2, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Proje Linki</label>
                        <input class="form-control" name="ProjectUrl" rows="6"></input>
                        @Html.ValidationMessageFor(x => x.ProjectUrl, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Fiyat</label>
                        <input class="form-control" name="Price" rows="6"></input>
                        @Html.ValidationMessageFor(x => x.Price, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Oran</label>
                        <input class="form-control" name="Value" rows="6"></input>
                        @Html.ValidationMessageFor(x => x.Value, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a asp-controller="Portfolio" asp-action="Index" class="btn btn-dark">İptal</a>
            </div>
        </div>
    </div>
}



