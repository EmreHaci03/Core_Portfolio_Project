@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sipariş Geçmişi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Proje Resmi </th>
                                <th> Proje Adı </th>
                                <th> Resim2 </th>
                                <th> Proje Linki </th>
                                <th> Fiyat </th>
                                <th> Durum </th>
                                <th> Tamamlanma Oranı </th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td> <img src="@item.ImageUrl" /></td>
                                    <td>
                                        <span class="pl-2">@item.Name</span>
                                    </td>
                                    <td><img src="@item.ImageUrl2" /></td>
                                    <td> @item.ProjectUrl </td>
                                    <td> @item.Price </td>
                                    <td>
                                        @if (item.Status == true)
                                        {
                                            <div class="badge badge-outline-success">Aktif</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-outline-warning">Pasif</div>
                                        }
                                    </td>
                                    @{
                                        int value;
                                        var parsed = int.TryParse(item.Value, out value);
                                    }

                                    <td>
                                        @if (value <= 50)
                                        {
                                            <div class="badge badge-danger">@item.Value</div>
                                        }
                                        else if (value > 50 && value < 70)
                                        {
                                            <div class="badge badge-warning">@item.Value</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-success">@item.Value</div>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Portfolio/UpdatePortfolio/@item.PortfolioID"
                                           class="badge badge-outline-success text-decoration-none">
                                            Detaylar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
