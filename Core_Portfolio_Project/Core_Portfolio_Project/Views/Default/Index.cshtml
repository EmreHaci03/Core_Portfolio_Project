
@{
    Layout = null;
}

<!DOCTYPE html>
<!-- upto 2 directory depth-->
<html lang="en-US">
@await Component.InvokeAsync("HeaderViewComponentPartial")
<body id="top">
    @await Component.InvokeAsync("NavbarViewComponentPartial")
    <div class="page-content">
        <div id="content">
            @await Component.InvokeAsync("FeatureViewComponentPartial")
            @await Component.InvokeAsync("AboutViewComponentPartial")
            @await Component.InvokeAsync("ServiceViewComponentPartial")
            @await Component.InvokeAsync("SkillViewComponentPartial")
            @await Component.InvokeAsync("PortfolioViewComponentPartial")
            @await Component.InvokeAsync("ExperienceViewComponentPartial")
            @await Component.InvokeAsync("TestimonialViewComponentPartial")
            <div class="section px-2 px-lg-4 pb-4 pt-5 mb-5" id="contact">
                <div class="container-narrow">
                    <div class="text-center mb-5">
                        <h2 class="marker marker-center">Bana Ulaşın</h2>
                    </div>
                    <div class="row">
                        @await Component.InvokeAsync("SendMessageViewComponentPartial")
                        @await Component.InvokeAsync("ContactViewComponentPartial")
                    </div>
                </div>
            </div>
            <footer class="pt-4 pb-4 text-center bg-light">
                <div class="container">
                    <div class="my-3">
                        <div class="h4">Emre Hacı</div>
                        <p>.NET Developer</p>
                        <div class="social-nav">
                            <nav role="navigation">
                                <ul class="nav justify-content-center">
                                    @await Component.InvokeAsync("SocialMediaViewComponentPartial")
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="text-small text-secondary">
                        <div class="mb-1">Tüm Hakları Saklıdır.</div>

                    </div>
                </div>
            </footer>
        </div>
    </div>
    <div id="scrolltop"><a class="btn btn-secondary" href="#top"><span class="icon"><i class="fas fa-angle-up fa-x"></i></span></a></div>
    <script src="~/Template/scripts/imagesloaded.pkgd.min.js?ver=1.2.0"></script>
    <script src="~/Template/scripts/masonry.pkgd.min.js?ver=1.2.0"></script>
    <script src="~/Template/scripts/BigPicture.min.js?ver=1.2.0"></script>
    <script src="~/Template/scripts/purecounter.min.js?ver=1.2.0"></script>
    <script src="~/Template/scripts/bootstrap.bundle.min.js?ver=1.2.0"></script>
    <script src="~/Template/scripts/aos.min.js?ver=1.2.0"></script>
    <script src="~/Template/scripts/main.js?ver=1.2.0"></script>
</body>
</html>