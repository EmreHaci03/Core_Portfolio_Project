@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditFeature", "Feature", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Feature Düzenleme Paneli </p>

                @Html.HiddenFor(x => x.FeatureID)

                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.Header, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Header, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Ad Soyad</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Ünvan</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <a href="@Url.Action("Index", "Feature")" class="btn btn-dark">İptal</a>
            </div>
        </div>
    </div>
}
